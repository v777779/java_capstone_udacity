<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


        <item name="android:windowTranslucentStatus">false</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>


    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="Progress_Bar_Horizontal" parent="Base.Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:indeterminate">false</item>
        <item name="android:progressDrawable">@drawable/progress_bar</item>
        <item name="android:minHeight">5dip</item>
        <item name="android:maxHeight">10dip</item>
        <item name="android:mirrorForRtl">true</item>
    </style>


    <style name="TextToolbar" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/image_rm_item_appbar_size</item>
        <item name="android:textStyle">italic</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="NewsAPI.TextToolbar" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/text_newsapi_size</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <!--<item name="android:textStyle">bold</item>-->
        <item name="android:textColor">@color/news_api_text_color</item>
        <item name="android:textStyle">italic|normal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Item.TextRecycler" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/rm_text_color_dark</item>

        <item name="android:ellipsize">end</item>
    </style>

    <style name="Date.Item.TextRecycler" parent="Item.TextRecycler">
        <item name="android:textSize">@dimen/text_rm_item_date_size</item>
    </style>

    <style name="Status.Item.TextRecycler" parent="Item.TextRecycler">
        <item name="android:textSize">@dimen/text_rm_item_status_size</item>
        <!--<item name="android:textColor">@color/rm_text_color_light</item>-->
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="Left.Item.TextRecycler" parent="Item.TextRecycler">
        <item name="android:textSize">@dimen/text_rm_item_team_size</item>
        <item name="android:gravity">top|center</item>
        <item name="android:lines">2</item>

    </style>

    <style name="Right.Item.TextRecycler" parent="Item.TextRecycler">
        <item name="android:textSize">@dimen/text_rm_item_team_size</item>
        <item name="android:gravity">top|center</item>
        <item name="android:lines">2</item>
    </style>

    <style name="Time.Item.TextRecycler" parent="Item.TextRecycler">
        <item name="android:textSize">@dimen/text_rm_item_time_size</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--match-->
    <style name="Match.TextRecycler" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/sm_text_color_light</item>
        <item name="android:textSize">@dimen/text_sm_item_size</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Match.Light.TextRecycler" parent="Match.TextRecycler">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TeamHome.Match.TextRecycler" parent="Match.TextRecycler">
        <item name="android:gravity">center</item>
        <item name="android:maxLines">3</item>
    </style>

    <style name="TeamAway.Match.TextRecycler" parent="Match.TextRecycler">
        <item name="android:gravity">center</item>
        <item name="android:maxLines">3</item>
    </style>

    <style name="Time.Match.TextRecycler" parent="Match.TextRecycler">
        <item name="android:textSize">@dimen/text_sm_item_time_size</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Start.Time.Match.TextRecycler" parent="Time.Match.TextRecycler">
        <item name="android:background">@drawable/match_time_back</item>
        <item name="android:textColor">@color/match_start_time</item>
        <item name="android:paddingStart">@dimen/margin_normal</item>
        <item name="android:paddingEnd">@dimen/margin_normal</item>
        <item name="android:textSize">@dimen/text_sm_item_start_time_size</item>

    </style>

    <style name="Date.Match.TextRecycler" parent="Match.TextRecycler">
        <item name="android:textSize">@dimen/text_sm_item_date_size</item>
    </style>


    <style name="Country.Match.TextRecycler" parent="Match.TextRecycler">
        <item name="android:textSize">@dimen/text_sm_item_country_size</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="League.Match.TextRecycler" parent="Match.Light.TextRecycler">
        <item name="android:textSize">@dimen/text_sm_item_league_size</item>
    </style>

    <style name="Score.Match.TextRecycler" parent="Match.Light.TextRecycler">
        <item name="android:textSize">@dimen/text_sm_item_score_size</item>
    </style>

    <style name="Status.Match.TextRecycler" parent="Match.Light.TextRecycler">
        <item name="android:textSize">@dimen/text_sm_item_status_size</item>

    </style>

    <style name="StartHeader.Match.TextRecycler" parent="Match.TextRecycler">
        <item name="android:textSize">@dimen/text_sm_item_start_header_size</item>
        <item name="android:textColor">@color/match_start_header</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="StartDate.Match.TextRecycler" parent="Match.TextRecycler">
        <item name="android:textSize">@dimen/text_sm_item_start_date_size</item>
        <item name="android:textColor">@color/match_start_date</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Subscript.Match.TextRecycler" parent="Match.TextRecycler">
        <item name="android:textSize">@dimen/text_sm_item_start_subscript_size</item>
        <item name="android:textColor">@color/match_start_subscript</item>

    </style>

    <style name="Start.Subscript.Match.TextRecycler" parent="Subscript.Match.TextRecycler">
        <item name="android:textColor">@color/match_start_subscript</item>
    </style>

    <!--bet-->
    <style name="Back.Bet.Match" parent="Match.TextRecycler">
        <item name="android:textSize">@dimen/text_sm_item_bet_back</item>
        <item name="android:textColor">@color/match_bet_text_back</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/match_bet_back</item>
        <!--<item name="android:paddingStart">@dimen/margin_normal</item>-->
        <!--<item name="android:paddingEnd">@dimen/margin_normal</item>-->
        <item name="android:textStyle">bold</item>

    </style>

    <style name="Home.Back.Bet.Match" parent="Back.Bet.Match">
        <item name="android:background">@drawable/match_bet_home_back</item>
        <item name="android:textColor">@color/match_bet_home_text_back</item>
    </style>

    <style name="Away.Back.Bet.Match" parent="Back.Bet.Match">
        <item name="android:background">@drawable/match_bet_away_back</item>
        <item name="android:textColor">@color/match_bet_away_text_back</item>
    </style>

    <style name="Bet.Match" parent="Match.TextRecycler">
        <item name="android:textSize">@dimen/text_sm_item_bet_size</item>
        <item name="android:textColor">@color/match_bet_text</item>
        <item name="android:gravity">center</item>
    </style>

    <!--recycler-->

    <style name="Score.Item.Recycler.Match" parent="Match.TextRecycler">
        <item name="android:textSize">@dimen/text_sm_recycler_score_size</item>
        <item name="android:textColor">@color/match_recycler_score_text</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="League.Item.Recycler.Match" parent="Match.TextRecycler">
        <item name="android:textSize">@dimen/text_sm_recycler_league_size</item>
        <item name="android:textColor">@color/match_recycler_league_text</item>
        <item name="android:gravity">center</item>
        <item name="android:lines">2</item>
    </style>

    <style name="Date.Item.Recycler.Match" parent="Match.TextRecycler">
        <item name="android:textSize">@dimen/text_sm_recycler_date_size</item>
        <item name="android:textColor">@color/match_recycler_date_text</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Team.Item.Recycler.Match" parent="Match.TextRecycler">
        <item name="android:textSize">@dimen/text_sm_recycler_team_size</item>
        <item name="android:textColor">@color/match_recycler_team_text</item>
        <item name="android:gravity">top|center</item>
        <item name="android:lines">3</item>
    </style>

    <style name="Bar.Widget.Match" parent="Match.Light.TextRecycler">
        <item name="android:textColor">@color/text_rm_item_widget_bar</item>
        <item name="android:textSize">@dimen/text_rm_item_widget_bar_size</item>

    </style>

    <!--news-->
    <style name="News.TextToolbar" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/text_news_item_appbar_size</item>
        <item name="android:textStyle">italic</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:lines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!--team-->


    <style name="Status.Team.TextRecycler" parent="Match.Light.TextRecycler">
        <item name="android:textSize">@dimen/text_tm_item_status_size</item>
        <item name="android:textColor">@color/team_recycler_status_text</item>
        <item name="android:background">@drawable/team_status_back</item>
        <item name="android:minEms">@integer/text_sm_item_status_min</item>
        <item name="android:paddingBottom">@dimen/margin_micro</item>
        <item name="android:paddingTop">@dimen/margin_micro</item>
    </style>

    <!--player-->


    <!--league-->


    <!--toolbar-->

    <!--news-->
    <style name="News.TextRecycler" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/news_item_card_back</item>
        <item name="android:textSize">@dimen/text_news_item_size</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Head.News.TextRecycler" parent="News.TextRecycler">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/news_item_head_text</item>
        <item name="android:textSize">@dimen/text_news_item_head_size</item>
        <item name="android:gravity">top|start</item>
        <item name="android:maxLines">2</item>
    </style>
    <style name="Body.News.TextRecycler" parent="News.TextRecycler">
        <item name="android:textColor">@color/news_item_body_text</item>
        <item name="android:textSize">@dimen/text_news_item_body_size</item>
        <item name="android:gravity">top|start</item>
        <item name="android:maxLines">7</item>
    </style>
    <style name="Source.News.TextRecycler" parent="News.TextRecycler">
        <item name="android:textColor">@color/news_item_source_text</item>
        <item name="android:textSize">@dimen/text_news_item_source_size</item>
        <item name="android:gravity">start</item>
        <item name="android:lines">1</item>
    </style>
    <style name="Time.News.TextRecycler" parent="News.TextRecycler">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/news_item_time_text</item>
        <item name="android:textSize">@dimen/text_news_item_time_size</item>
    </style>

    <!--widgets-->
    <style name="Match.Widget" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/widget_text_color</item>
        <item name="android:textSize">@dimen/widget_text_size</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="Match.Light.Widget" parent="Match.Widget">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Team.Match.Widget" parent="Match.Light.Widget">
        <item name="android:gravity">center|top</item>
        <item name="android:lines">3</item>
    </style>
    <style name="Time.Match.Widget" parent="Match.Widget">
        <item name="android:textSize">@dimen/widget_text_time_size</item>
    </style>
    <style name="League.Match.Widget" parent="Match.Light.Widget">
        <item name="android:textSize">@dimen/widget_text_league_size</item>
        <item name="android:lines">1</item>
    </style>
    <style name="Score.Match.Widget" parent="Match.Light.Widget">
        <item name="android:textSize">@dimen/widget_text_score_size</item>
    </style>



    <!--other-->
    <!--recycler-->
    <style name="Head.Item.TextRecycler" parent="Item.TextRecycler">
        <item name="android:textSize">@dimen/text_rm_head_size</item>
        <item name="android:gravity">start|center</item>
        <item name="android:lines">2</item>
        <!--<item name="android:textStyle">bold</item>-->
        <!--<item name="android:textStyle">bold</item>-->

    </style>

    <style name="TextTab" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/sliding_tabs_text_size</item>
        <item name="android:gravity">center</item>
    </style>

    <!--text styles-->
    <style name="TextNormal" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextHead" parent="TextNormal">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/head_text_size</item>
    </style>

    <style name="Color.TextHead" parent="TextHead">
        <item name="android:textColor">@color/color_dialog_head_text</item>
    </style>

    <style name="Text.Calendar" parent="TextNormal">
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/color_calendar_head_back</item>
        <item name="android:textColor">@color/color_calendar_head_text</item>
    </style>

    <style name="Large.Text.Calendar" parent="Text.Calendar">
        <item name="android:textSize">@dimen/calendar_head_large_text_size</item>
    </style>


    <!--dialog-->
    <style name="Dialog.Title" parent="android:Widget.TextView">
        <item name="android:background">@color/color_dialog_head_back</item>
        <item name="android:textAppearance">@style/Color.TextHead</item>
        <item name="android:padding">@dimen/margin_normal</item>
    </style>


    <style name="Calendar.Dialog" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/window_background</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="colorAccent">@color/color_calendar_accent</item>

        <item name="android:buttonStyle">@style/dialog_button_style</item>
    </style>


    <style name="dialog_button_style" parent="@style/Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/colorButtonText</item>
    </style>


</resources>
