<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="@dimen/margin_small"
    android:layout_marginEnd="@dimen/margin_small"
    android:layout_marginStart="@dimen/margin_small"
    android:backgroundTint="@android:color/transparent"
    app:cardCornerRadius="@dimen/card_corner_rm_item_radius"

    >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/rm_head_card_back">

        <ImageView
            android:id="@+id/image_rm_head_league"
            android:layout_width="@dimen/image_rm_head_icon_size"
            android:layout_height="@dimen/image_rm_head_icon_size"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"

            android:contentDescription="@string/image_rm_item_league_logo"
            android:src="@drawable/ic_notifications"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/text_rm_head_league"
            style="@style/Head.Item.TextRecycler"
            android:layout_width="0dp"
            android:layout_height="wrap_content"


            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:contentDescription="@string/text_rm_item_league_name"
            android:text="@string/text_test_rm_item_league"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image_rm_head_league"
            app:layout_constraintTop_toTopOf="parent" />


    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>